package com.myapp.basics;

public class TypeCasting {

	public static void main(String[] args) {
		
		//type Casting - 2 types
		// 1. Narrowing casting(manual) - converting a larger type to smaller type
		//double -> float -> long -> int -> char -> short -> byte
		
		//syntax: 
		// smallertype variable=(smallertype) largervariable;
		
		double d=67.89;
		int n=(int) d;
		System.out.println(n);
		
		
		
		//2.Widening Casting(automatic)
		// reverse from the byte to double
	}

}
